<configuration>

    <conversionRule conversionWord="highlighter" converterClass="ru.javawebinar.topjava.service.rule.HighlightingCompositeConverterEx" />

    <contextListener class="ch.qos.logback.classic.jul.LevelChangePropagator">
        <resetJUL>true</resetJUL>
    </contextListener>

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <charset>UTF-8</charset>
<!--            <pattern>%d{HH:mm:ss.SSS} %-5level %class{50}.%M:%L - %msg%n</pattern>-->
            <pattern>%d{yyyy-MM-dd} | %d{HH:mm:ss.SSS} | %highlighter(%5p) | %class{50}.%M:%L  | %m%n</pattern>
        </encoder>
    </appender>

    <logger name="org.postgresql" level="debug"/>
    <logger name="org.springframework.jdbc" level="debug"/>
    <logger name="ru.javawebinar.topjava" level="debug"/>

    <root level="INFO">
        <appender-ref ref="console"/>
    </root>

</configuration>